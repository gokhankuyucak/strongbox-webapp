<configuration>

    <version>1.0</version>
    <port>48080</port>

    <storages>
        <storage>
            <basedir>storages/storage0</basedir>
            <name>storage0</name>

            <repositories>
                <!-- Secured repositories do not allow anonymous access -->
                <repository name="snapshots" basedir="/snapshots" policy="snapshots" implementation="file-system" type="hosted" secured="true" />
                <repository name="releases" basedir="/releases" policy="releases" implementation="file-system" type="hosted"/>
            </repositories>
        </storage>
    </storages>

</configuration>
